@model IEnumerable<CandidateProfileSystem.Models.Technology>

<h2>Technologies</h2>
<a asp-action="Create" class="btn btn-primary">Add New Technology</a>

<table class="table">
    <thead>
        <tr>
            <th>Technology Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tech in Model)
        {
            <tr>
                <td>@tech.TechnologyName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tech.Id" class="btn btn-warning">Edit</a>

                    <form asp-action="DeleteConfirmed" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@tech.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this technology?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
